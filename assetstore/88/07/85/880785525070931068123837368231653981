7.                 $res[1] += $ud->disgust; 
8.                 $res[2] += $ud->fear; 
9.                 $res[3] += $ud->joy; 
10.                 $res[4] += $ud->sadness; 
11.                 $m++; 
12.             } else { 
13.                 if (strcasecmp($ud->gender, "f") == 0) { 
14.                     $res[5] += $ud->anger; 
15.                     $res[6] += $ud->disgust; 
16.                     … 
17.                     $w++; 
18.                 } else { 
19.                     $res[10] += $ud->anger; 
20.                     $res[11] += $ud->disgust; 
21.                      … 
22.                     $nd++; 
23.                 } 
24.             } 
